ScreenManager:
    IntroductionScreen:
    FooScreen:

<IntroductionScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: title
                size_hint: (1, .18)
                font_size: self.height * .9
                font_name: 'Tangerine-Bold'
                text: 'Welcome.'
            Label:
                id: body
                size_hint: (1, .7)
                text_size: self.width, None
                font_size: self.height * .06
                font_name: 'PoiretOne-Regular'
                height: self.texture_size[1]
                text: 'You have chosen to engage in the global seminar. As a part of this course, you will be challenged to change who you are and how you interact with the world. You will be asked to step outside of the comfortable and routine in order to expand not just your college experience but your life experience. The focus of this course is cultural intelligence or CQ.'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Upload Course Spreadsheet'
                on_release: root.show_load()
            Button:
                text: 'Submit'
                on_release: app.root.current = 'foo'
                on_release: root.manager.transition.direction = 'right'


<FileSelectorPopup>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: '~'

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)

<DashboardScreen>:
    name: 'dashboard'

    GridLayout:
        cols: 1

        Label:
            id: recap
            size_hint_y: None
            font_size: self.height
            text: 'test.'

        Button:
            id: back
            size_hint_y: None
            font_size: self.height
            text: 'go back'


<ActionScreen>:
    name: 'action'

    GridLayout:
        cols: 1

        Label:
            id: action
            size_hint_y: None
            font_size: self.height
            text: 'empty'

        Button:
            id: back
            size_hint_y: None
            font_size: self.height
            text: 'go back'
